{
  "name": "anaevent-overlay",
  "homepage": "anaevent.com",
  "authors": [
    "Nelson Garcia <nelson@anaevent.com>"
  ],
  "modified": [
    "Nelson Garcia <nelson@anaevent.com>"
  ],
  "scripts": {
    "static": "eslint **/*.js",
    "test": "npm run static"
  },
  "description": "The main broadcast assets for GameLineTV",
  "version": "1.0.0",
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.4.1",
    "deep-equal": "^1.0.1",
    "jsonfile": "^3.0.0",
    "lastfm": "^0.9.2",
    "osc": "^2.1.0",
    "q": "^1.4.1",
    "readdirp": "^2.1.0",
    "request-promise": "^3.0.0",
    "twemoji": "^2.0.5",
    "twitter": "^1.2.5"
  },
  "devDependencies": {
    "eslint": "^3.8.1",
    "eslint-config-xo": "^0.17.0"
  },
  "nodecg": {
    "compatibleRange": "~0.8.0",
    "graphics": [
      {
        "file": "index.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "countdown.html",
        "width": 1920,
        "height": 1080
      }
    ],
    "dashboardPanels": [
      {
        "name": "master",
        "title": "Master Controls",
        "width": 2,
        "file": "master.html",
        "headerColor": "#595664"
      },
      {
        "name": "donations",
        "title": "Donations",
        "width": 2,
        "file": "donations.html",
        "headerColor": "#0D9537"
      },
      {
        "name": "scoreboard",
        "title": "Scoreboard",
        "width": 6,
        "file": "scoreboard.html",
        "headerColor": "#671CFF"
      },
      {
        "name": "now-playing",
        "title": "Now Playing",
        "width": 2,
        "file": "now-playing.html",
        "headerColor": "#DC198C"
      },
      {
        "name": "total",
        "title": "Total",
        "width": 2,
        "file": "total.html",
        "headerColor": "#1FA351"
      },
      {
        "name": "edit-total",
        "title": "Edit Total",
        "width": 2,
        "dialog": true,
        "dialogButtons": [
          {
            "name": "save",
            "type": "confirm"
          },
          {
            "name": "cancel",
            "type": "dismiss"
          }
        ],
        "file": "dialogs/edit-total.html"
      },
      {
        "name": "twitter",
        "title": "Twitter",
        "width": 3,
        "file": "twitter.html",
        "headerColor": "#19A6FF"
      },
      {
        "name": "countdown",
        "title": "Countdn",
        "width": 1,
        "file": "countdown.html",
        "headerColor": "#000000"
      }
    ],
    "soundCues": [
      {
        "name": "image_in",
        "assignable": false,
        "defaultFile": "sound/image_in.ogg"
      },
      {
        "name": "image_out",
        "assignable": false,
        "defaultFile": "sound/image_out.ogg"
      },
      {
        "name": "lowerthird_in",
        "assignable": false,
        "defaultFile": "sound/lowerthird_in.ogg"
      },
      {
        "name": "lowerthird_out",
        "assignable": false,
        "defaultFile": "sound/lowerthird_out.ogg"
      },
      {
        "name": "scoreboard_in",
        "assignable": false,
        "defaultFile": "sound/scoreboard_in.ogg"
      },
      {
        "name": "scoreboard_out",
        "assignable": false,
        "defaultFile": "sound/scoreboard_out.ogg"
      },
      {
        "name": "tweet_in",
        "assignable": false,
        "defaultFile": "sound/tweet_in.ogg"
      },
      {
        "name": "tweet_out",
        "assignable": false,
        "defaultFile": "sound/tweet_out.ogg"
      },
      {
        "name": "notification_tier3",
        "assignable": false,
        "defaultFile": "sound/notification_tier3.ogg"
      },
      {
        "name": "challenge_accepted",
        "assignable": false,
        "defaultFile": "sound/challenge_accepted.ogg"
      }
    ]
  }
}
